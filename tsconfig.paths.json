{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@features/*": [
        "./src/components/features/*"
      ],
      "@features/marketing/hero/HeroEnhanced": [
        "./src/components/features/marketing/hero/HeroEnhanced.tsx"
      ],
      "@features/booking/FeaturedCars": [
        "./src/components/features/booking/FeaturedCars.tsx"
      ],
      "@features/marketing/PopularRoutes": [
        "./src/components/features/marketing/PopularRoutes.tsx"
      ],
      "@features/marketing/HowItWorks": [
        "./src/components/features/marketing/HowItWorks.tsx"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
